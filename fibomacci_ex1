/*Моя первая попытка по выводу числа Фибоначчи*/
#include <iostream>
using namespace std;

int fibonacci(int f1, int f2);
int main()
{
	setlocale(LC_ALL, "Russian");

	printf("Введите номер члена: ");
	int n;
	cin >> n;
	cout << "1 член: " << 0 << endl;
	cout << "2 член: " << 1 << endl;
	int a = 0, b = 1, m = 3, answer;	// b = f(-1) ; a = f(-2) 
	while (m <= n) {
		answer = fibonacci(a, b);
		a = b;
		b = answer;
		cout << m << " член: " << answer << endl;
		m++;
	}
	return 0;
}

int fibonacci(int f1, int f2) {
	int final;
	final = f1 + f2;
	return final;
}
